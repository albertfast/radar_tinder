{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "module": "es2020",
    "target": "es2020"
  },
  "exclude": [
    "src/app/**",
    "src/components/ui/**",
    "src/hooks/**",
    "src/lib/**"
  ]
}
